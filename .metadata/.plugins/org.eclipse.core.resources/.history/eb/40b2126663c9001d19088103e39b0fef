package chap98_homework.HW8_20230323;

public class Basic2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		StringBuffer sb = new StringBuffer(30);
		
		sb.append("hello");
		sb.setLength(30);
		for(int i = sb.length() ; i < sb.capacity() ; i ++) {
			 sb.setCharAt(i, 'a');
		}
		
		System.out.println(sb);
		
		
		
		
		
		
	}

}
